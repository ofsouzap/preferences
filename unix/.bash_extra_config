# Make sure electron apps (e.g. VSCode) use wayland, not XWayland
if [ "$XDG_SESSION_TYPE" = "wayland" ]
then
    export ELECTRON_OZONE_PLATFORM_HINT=wayland
fi

# fzf keybindings and setup

export FZF_DEFAULT_OPTS="--height 60% --layout=reverse --border"

FZF_KEYBINDINGS_FILE="/usr/share/doc/fzf/examples/key-bindings.bash"

if [ -f "$FZF_KEYBINDINGS_FILE" ]
then
    source "$FZF_KEYBINDINGS_FILE"
fi

