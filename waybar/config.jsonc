// List of signals used
// ====================
//
// 10 - volume
// 11 - caps lock and num lock
// 12 - media player
// 13 - brightness

{
  "layer": "top",
  "position": "bottom",
  "height": 29,
  "modules-left": ["sway/workspaces", "sway/mode"],
  "modules-right": [
    "custom/mediaplayer",
    "custom/volume",
    "custom/brightness",
    "battery",
    "custom/kblayout",
    "custom/weather",
    "clock",
    "tray"
  ],

  "custom/mediaplayer": {
    "format": "{} |",
    "exec": "playerctl metadata --format '{{artist}} - {{title}}'",
    "interval": 5,
    "on-click": "playerctl play-pause",
    "signal": 12
  },

  // TODO - CAPS lock and NUM lock indicators. Use colors, preferably. Use signal 11

  "custom/volume": {
    "exec": "~/.config/waybar/custom-scripts/volume",
    "interval": 1,
    "format": "ğŸ”ˆ {} |",
    "signal": 10
  },

  "custom/brightness": {
    "exec": "~/.config/waybar/custom-scripts/brightness",
    "interval": 2,
    "format": "ğŸ”… {} |",
    "signal": 13
  },

  "battery": {
    "format": "{icon}  {capacity}% ({time}) |",
    "format-full": "{icon}  full |",
    "format-charging": "{icon}  {capacity}% (âš¡ {time}) |",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "format-time": "{H}h{m}m"
  },

  "custom/kblayout": {
    "format": "{} |",
    "exec": "~/.config/waybar/custom-scripts/kblayout",
    "interval": 5
  },

  "custom/weather": {
    "format": "{} |",
    "exec": "~/.config/waybar/custom-scripts/weather",
    "interval": 300
  },

  "clock": {
    "format": "ğŸ—“ï¸ {:%Y-%m-%d  %H:%M:%S}  ",
    "interval": 1
  }
}

